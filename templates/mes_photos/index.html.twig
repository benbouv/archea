{% extends 'base.html.twig' %}

{% block title %}Photo index{% endblock %}

{% block body %}
    <h1>Photo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Context</th>
                <th>Description</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for photo in photos %}
            <tr>
                <td>{{ photo.id }}</td>
                <td>
                    <img src="{{ asset('uploads/' ~ photo.image) }}" style="max-height: 15em; max-width: 16em;" class="card-img-top" alt="...">
                </td>
                <td>{{ photo.latitude }}</td>
                <td>{{ photo.longitude }}</td>
                <td>{{ photo.context }}</td>
                <td>{{ photo.Description }}</td>
                <td>{{ photo.date ? photo.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_mes_photos_show', {'id': photo.id}) }}">show</a>
                    <a href="{{ path('app_mes_photos_edit', {'id': photo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_mes_photos_new') }}">Create new</a>
{% endblock %}
