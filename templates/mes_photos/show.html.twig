{% extends 'base.html.twig' %}

{% block title %}Photo{% endblock %}

{% block body %}
    <h1>Photo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ photo.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ photo.image }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ photo.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ photo.longitude }}</td>
            </tr>
            <tr>
                <th>Context</th>
                <td>{{ photo.context }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ photo.Description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ photo.date ? photo.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_mes_photos_index') }}">back to list</a>

    <a href="{{ path('app_mes_photos_edit', {'id': photo.id}) }}">edit</a>

    {{ include('mes_photos/_delete_form.html.twig') }}
