{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

{% include 'navBar/navbar.html.twig' %}
    <h1>S'inscrire</h1>
   <div class="login_register_wrap section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-md-10">
                <div class="login_wrap">
            		<div class="padding_eight_all bg-white">
                        <div class="heading_s1">
                            <h3>Créer un compte</h3>
                            <div class="message-flash">
                                {% for flash_error in app.flashes('verify_email_error') %}
                                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                                {% endfor %}
                        </div>
                        </div>
                         {{ form_start(registrationForm) }}
                        
                            <div class="form-group">
                                {{ form_row(registrationForm.pseudo) }}
                            </div>
                            <div class="form-row">
                                <div classs="col-md-6">  {{ form_row(registrationForm.nom) }}</div>
                                <div classs="col-md-6">  {{ form_row(registrationForm.prenom) }}</div>
                            </div>
                            <div class="form-group">
                                {{ form_row(registrationForm.plainPassword) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(registrationForm.email) }}
                            </div>
                                
        
                            <div class="form-group">
                                <button type="submit" class="btn btn-fill-out btn-block" name="register">S'inscrire</button>
                            </div>
                        {{ form_end(registrationForm) }}
                        
                        
                        <div class="form-note text-center">Vous avez déja un compte <a href="{{ path('app_login')}}">Se connecter</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>









 
{% endblock %}
